<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="FosdemTheme" parent="@style/Theme.Sherlock.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:listViewStyle">@style/list_view</item>
        <item name="dropdownListPreferredItemHeight">40dp</item>
    </style>

    <style name="main_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="day_button">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="list_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/list_background</item>
    </style>

    <style name="list_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/fosdem_purple</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="list_item">
        <item name="android:minHeight">?android:listPreferredItemHeight</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/list_background</item>
        <item name="android:textColor">@color/list_text</item>
    </style>

    <style name="title">
        <!-- <item name="android:textColor">@color/title</item> -->
        <item name="android:textSize">21sp</item>
    </style>

    <style name="subtitle">
        <!-- <item name="android:textColor">@color/subtitle</item> -->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="event_title" parent="title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tracklist_title" parent="title">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="tracklist_subtitle" parent="title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_view" parent="@android:Widget.ListView">
        <!-- <item name="android:cacheColorHint">@color/fosdem_purple</item> -->
    </style>

</resources>
